<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="#FFFFFF">
        <ImageView
        android:id="@+id/imagemReceita"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/imagem"
       />

        <Button
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:textSize="30sp"
            android:elevation="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/fundocamera"
            android:textColor="#ffff"
            android:layout_marginRight="16dp"
            android:id="@+id/camera"
            />
        <Button
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:textSize="30sp"
            android:elevation="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/fundo_galeria"
            android:layout_marginRight="80dp"
            android:id="@+id/galeria"
            />

    </RelativeLayout>

    <EditText
        android:layout_marginTop="5dp"
        android:background="@drawable/editborda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da receita..."
        android:id="@+id/nomeReceita"
        android:textSize="20dp"
        />
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@drawable/editborda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredientes"
                android:textSize="20dp"
                android:textColor="#000000"/>
            <EditText
                android:background="@drawable/editborda"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Ex: FeijÃ£o..."
                android:textSize="20dp"
                android:id="@+id/ingredienteReceitaNome"/>
            <EditText
                android:layout_marginTop="5dp"
                android:background="@drawable/editborda"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Ex: 1 kg"
                android:textSize="20dp"
                android:id="@+id/ingredienteReceitaMedida"/>
        </LinearLayout>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="30sp"
            android:elevation="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/fundoadd"
            android:textColor="#000000"
            android:layout_marginRight="2dp"
            android:id="@+id/ingredienteReceitaAdicionar"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:id="@+id/gridIngredientesReceitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@drawable/editborda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Passo a Passo Modo de Preparo"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Ex: Misturar os ingredientes"
                android:textSize="20dp"
                android:id="@+id/stepReceita"
                android:background="@drawable/editborda"/>
        </LinearLayout>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="30sp"
            android:elevation="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/fundoadd"
            android:textColor="#000000"
            android:layout_marginRight="2dp"
            android:id="@+id/stepReceitaAdicionar"
            />
    </RelativeLayout>
    <ListView
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:id="@+id/listStepsReceita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
<LinearLayout
    android:background="@drawable/editborda"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dificuldade"
        android:textSize="15dp"/>
    <Spinner

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/dificuldadeReceita"
        android:textAlignment="center"
        android:background="@drawable/editborda"
        />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo de preparo"
            android:textSize="15dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo no forno"
            android:textSize="15dp"
            android:layout_marginLeft="75dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="200"
            android:textSize="20dp"
            android:id="@+id/tempoPreparoReceita"
            android:background="@drawable/editborda"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="min"/>
        <EditText
            android:background="@drawable/editborda"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="200"
            android:textSize="20dp"
            android:id="@+id/tempoFornoReceita"
            android:layout_marginLeft="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="min"/>
    </LinearLayout>
</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Receita"
        android:id="@+id/salvarReceita"
        android:textColor="#000000"
        android:background="@drawable/botaofundo"/>
</LinearLayout>
</ScrollView>