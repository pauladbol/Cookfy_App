<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:padding="15dp">
    <TextView android:id="@+id/showvalues" android:layout_width="fill_parent"
        android:layout_height="wrap_content" />



    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout android:id="@+id/edits_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="end"></LinearLayout>

    <Button android:id="@+id/criar" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:onClick="startNumber"
        android:text="+"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
