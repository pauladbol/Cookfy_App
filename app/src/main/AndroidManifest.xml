<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.livrodereceitas.cookfy">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cookfy"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
        <activity
            android:name=".Activities.Main2Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.CadastroActivity" />
        <!--
     ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->

        <activity android:name=".Activities.LoginNovoActivity" />
        <activity android:name=".Activities.PesquisaIngredienteActivity" />
        <activity android:name=".Activities.ListaReceitasActivity" />
        <activity android:name=".Activities.DetalheActivity" />
        <activity
            android:name=".Activities.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>